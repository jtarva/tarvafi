// Handle direct navigation from case studies (no smooth scroll)
function handleCaseStudyNavigation() {
    const urlParams = new URLSearchParams(window.location.search);
    const hash = window.location.hash;

    if (urlParams.get('from') === 'case-study' && hash) {
        // Temporarily disable smooth scrolling on the html element
        const htmlElement = document.documentElement;
        const originalScrollBehavior = htmlElement.style.scrollBehavior;
        htmlElement.style.scrollBehavior = 'auto';

        // Remove the URL parameter to clean up the URL
        const newUrl = window.location.pathname + hash;
        window.history.replaceState({}, '', newUrl);

        // Wait for the page to fully render, then adjust position
        setTimeout(() => {
            const targetId = hash.substring(1); // Remove the # from hash
            const target = document.getElementById(targetId);
            if (target) {
                // Use offsetTop for more reliable positioning
                const targetPosition = target.offsetTop - 60; // 60px offset to clear nav bar and add padding
                console.log('Scrolling to position:', targetPosition, 'for target:', targetId);

                window.scrollTo({
                    top: Math.max(0, targetPosition), // Ensure we don't scroll to negative values
                    behavior: 'auto'
                });
            }
        }, 50); // Small delay to ensure page is rendered

        // Restore original scroll behavior after a brief delay
        setTimeout(() => {
            htmlElement.style.scrollBehavior = originalScrollBehavior;
        }, 200);
    }
}

