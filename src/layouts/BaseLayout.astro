---
import '../styles/global.css';
import Nav from '../components/Nav.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Jussi Tarvainen (tarva.fi)',
  description = 'Portfolio and work showcase'
} = Astro.props;

const currentPath = Astro.url.pathname;
const { site, base } = Astro.site ? { site: Astro.site, base: import.meta.env.BASE_URL } : { site: '', base: '/' };
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${base.endsWith('/') ? base : base + '/'}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="https://d3js.org/d3.v7.min.js"></script>
  </head>
  <body class="min-h-screen flex flex-col" style="background-color: var(--color-background);">
    <Nav currentPath={currentPath} />
    
    <main class="flex-grow pt-16">
      <slot />
    </main>
    
    <footer class="border-t mt-auto" style="background-color: black; border-color: var(--color-border);">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        
        <p class="text-sm text-center" style="color: var(--color-text-muted);">
          Crafted in 2025 in beautiful lakeside Tampere, Finland.
        </p>
      </div>
    </footer>
  </body>
</html>